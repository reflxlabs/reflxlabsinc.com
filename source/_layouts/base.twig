<!DOCTYPE html>
<html>
  <head>
    <title>
      {% if page.full_title %}
        {{ page.full_title }}
      {% elseif page.title %}
        {{ page.title }} &mdash; REFLX Labs &mdash; Expression Through Action
      {% else %}
        REFLX Labs &mdash; Expression Through Action
      {% endif %}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{ site.url }}/components/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Lora:400,400italic|Muli:300,300italic,400,400italic,normal|Playfair+Display:normalitalic"/>
    <link href="{{ site.url }}/assets/css/style.css" rel="stylesheet" media="screen">
    <link href="{{ site.url }}/components/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link rel="icon" href="{{ site.url }}/favicon.ico">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="{{ site.url }}/assets/js/html5shiv.js"></script>
      <script src="{{ site.url }}/assets/js/respond.min.js"></script>
    <![endif]-->
    <!--[if lt IE 7]>
      <style media="screen" type="text/css">
        #whole-page-container {
          height:100%;
        }
      </style>
    <![endif]-->
  </head>
  <body>

    <div id="whole-page-container">
      {% block primary_navigation %}
        <nav class="navbar navbar-default" role="navigation">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ site.url }}/">REFLX Labs</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav">
              <li><a href="{{ site.url }}/">Home</a></li>
              <li><a href="{{ site.url }}/about/">About</a></li>
              <li><a href="{{ site.url }}/team/">Team</a></li>
              <li><a href="{{ site.url }}/press/">Press</a></li>
              <li><a href="{{ site.url }}/privacy/">Privacy</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="http://boogio.com/">Boogio</a></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </nav>
      {% endblock %}
      {% block jumbo %}{% endblock %}

      <div id="whole-page-content-container">
        {% block content_wrapper %}
          <section class="content">
            <div class="container">
              {% block content %}Fallback content. :){% endblock %}
            </div>
          </section>
        {% endblock %}

        {% block footer %}
          <section class="site-footer">
            <footer>
              <div class="press">
                Press inquiries: <a href="mailto:press@reflxlabsinc.com">press@reflxlabsinc.com</a>
              </div>

              <div class="copyright">
                &copy; {{ "now"|date("Y") }} REFLX Labs, Inc. All rights reserved.
              </div>

              <div class="privacy">
                <a title="REFLX Labs Privacy Policy" href="{{ site.url }}/privacy/">Privacy Policy</a>
              </div>
            </footer>
          </section>
        {% endblock %}
      </div>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{site.url}}/components/jquery/jquery.min.js"><\/script>')</script>
    <script src="{{ site.url }}/components/bootstrap/js/bootstrap.min.js"></script>
    {% if site.google_analytics_tracking_id %}
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '{{ site.google_analytics_tracking_id }}', 'reflxlabsinc.com');
        ga('send', 'pageview');
      </script>
    {% endif %}
  </body>
</html>
